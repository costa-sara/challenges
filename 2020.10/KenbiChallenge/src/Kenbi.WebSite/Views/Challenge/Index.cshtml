
@model ChallengeViewModel

@{
    ViewBag.Title = "Challenge Protected";
}
@if (Model.Success != null)
{
    @if ((bool)Model.Success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> The "@Model.ProtectedData" was successfully encrypted and saved.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> An error ocurred during the operation.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}


<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <section>

            <form method="post" role="form" class="form-horizontal" asp-action="EncryptAndSave">
                @Html.AntiForgeryToken()

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.ProtectedData, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ProtectedData, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Encrypt and Save</button>
                    </div>
                </div>
            </form>

        </section>
    </div>
</div> 